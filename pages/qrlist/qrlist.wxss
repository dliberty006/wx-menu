button::after {
  border: none;
}
.search{
  background: #fff;
  width: 100%;
  height: 100rpx;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9;
}
.search-form{
  width: 80%;
  height: 68rpx;
  position: absolute;
  top: 16rpx;
  left: 20rpx;
  background: #f1f1f1;
  font-size: 28rpx;
  border-radius: 40rpx;
}
.search-form input{
  height: 68rpx;
  line-height: 68rpx;
  padding-left: 40rpx;
}
.action{
  height: 68rpx;
  line-height: 68rpx;
  position: absolute;
  top: 14rpx;
  right: 35rpx;
  color: #5c5c5c;
  font-size: 32rpx;

}

.content{
  margin: 100rpx auto 0;
}
.content .search_tj{
  width: 95%;
  margin: 0 auto;
  border:1px solid #ffffff;
}
.content .search_tj .tj_item{
  margin: 40rpx auto;
  clear: both;
  overflow: hidden;
}
.tj_item .item_name{
  color: #323232;
  font-size: 32rpx;
  height: 48rpx;
  line-height: 48rpx;
  position: relative;
}
.tj_item .item_name image{
  width:30rpx;
  height: 35rpx;
  position: absolute;
  top: 10rpx;
  right: 10rpx;
}
.tj_item .item_desc{
  margin: 20rpx auto;
}
.tj_item .item_desc view{
  float: left;
  padding: 10rpx 20rpx;
  margin: 10rpx;
  font-size: 28rpx;
  color: #5c5c5c;
  border:1px solid #cdcdcd;
  border-radius: 40rpx;
}
.list{
  margin: 0 auto;
}